@model JobApplication.ViewModels.CreateProjectViewModel

@{
    ViewData["Title"] = "CreateProject";
}

<h2>CreateProject</h2>

<h4>CreateProjectViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Technology" class="control-label"></label>
                <input asp-for="Technology" class="form-control" />
                <span asp-validation-for="Technology" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AchievedGoals" class="control-label"></label>
                <input asp-for="AchievedGoals" class="form-control" />
                <span asp-validation-for="AchievedGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FutureGoals" class="control-label"></label>
                <input asp-for="FutureGoals" class="form-control" />
                <span asp-validation-for="FutureGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-rounded" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
